- content_for :title do
  Archive
.container
  .page-header
    %h1
      Archive
  .timeline
    .line.text-muted
    - issues.each do |issue|
      %article.panel.panel-success
        .panel-heading.icon
          %i.glyphicon.glyphicon-envelope
        .panel-heading
          %h2.panel-title Issue ##{issue.id} — #{issue.title} — #{issue.created_at.strftime("%d %b. %Y")}
        .panel-body
          = issue.description
          %br
          %ol
          - issue.link.each do |link|
            %li
              %a{:href => "http://#{link.url}", :target => "_blank"}
                = link.url
        .panel-footer
          By
          = issue.author
%br
%br